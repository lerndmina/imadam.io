---
interface Props {
  text: string;
  href: string;
  extraclasses?: string;
  onclick?: string;
}
const { text, href, extraclasses, onclick } = Astro.props as Props;

const classes = `bg-gradient-to-r from-notwhite to-notwhite hover:from-gradient1 hover:to-gradient2 text-transparent bg-clip-text link ${
  extraclasses ? extraclasses : ""
}`;

// If domain exists and is not homeurl then open in new tab.
const homeUrl = "lerndmina.dev";
var target;

const regex = "^(https?://)?(www.)?([^/]+)";
const found = href.match(regex);
if (found && found[3] != homeUrl) {
  target = 'target="_blank"';
}
---

<a onclick={onclick} {target} class={classes} href={href}>{text}</a>
